{
  "displayName": "QR Code Scanner",
  "defaultWidth": 375,
  "defaultHeight": 600,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "resizeX": true,
  "resizeY": true,
  "props": [
    {
      "name": "displayInEditorMode",
      "displayName": "Run QR Scanner in editor",
      "type": "boolean"
    },
    {
      "name": "cameraType",
      "displayName": "Which camera would you like to use?",
      "type": "text",
      "defaultValue": "front",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Front", "value": "front" },
          { "label": "Rear", "value": "rear" }
        ]
      }
    },
    {
      "name": "useActions",
      "displayName": "Actions when a QR Code is Scanned",
      "type": "action",
      "helpText": "You can access the QR Code data through Magic Text in these actions",
      "arguments": [
        {
          "type": "text",
          "displayName": "Data"
        },
        {
          "type": "text",
          "displayName": "Encoded Data"
        }
      ]
    },
    {
      "name": "onError",
      "displayName": "Actions when an error occured",
      "type": "action",
      "arguments": [
        {
          "type": "text",
          "displayName": "Error information"
        }
      ]
    }
  ]
}
